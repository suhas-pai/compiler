    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/build_debug/compiler",
            "args": ["--print-ast", "--print-ir"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (file)",
            "program": "${workspaceFolder}/build_debug/compiler",
            "args": ["--print-ast", "--print-ir", "examples/file.txt"],
            "cwd": "${workspaceFolder}"
        }
    ]
}